+        }
+        const mediaID = Number(mediaIDMatch[1]);
+        items.push({ mediaID, context: input.shortTitle });
+      }
+    } else {
+      const mediaIDMatch = LOCAL_MEDIA_PATH_REGEX.exec(input.title);
+      if (!mediaIDMatch) {
